{
    "name": "tf",
    "private": true,
    "type": "module",
    "engines": {
        "node": "^18 || ^20"
    },
    "scripts": {
        "test-playwright": "playwright test",
        "turbo:build": "turbo build",
        "turbo:check-types": "turbo check-types --force",
        "turbo:lint-js": "turbo lint-js --force",
        "turbo:lint-js-fix": "turbo lint-js-fix --force",
        "turbo:lint-js-next": "turbo lint-js-next --force",
        "turbo:test": "turbo test --force",
        "turbo:build:pocs": "turbo build --force --filter='./pocs/*' --filter=!@tf/next-playground --filter=!@tf/react-playground --filter=!@tf/astro-solidjs",
        "format-check": "prettier --check .",
        "format-write": "prettier --write .",
        "beforecommit": "NODE_ENV=production lint-staged && turbo check-types test --force",
        "vercel": "vercel",
        "netlify": "netlify",
        "turbo": "turbo"
    },
    "workspaces": [
        "apps/*",
        "components/*",
        "libs/*",
        "pocs/*",
        "sites/*",
        "tools/*"
    ],
    "devDependencies": {
        "@ianvs/prettier-plugin-sort-imports": "^4.1.0",
        "@playwright/test": "^1.38.1",
        "@total-typescript/ts-reset": "^0.5.1",
        "@types/node": "^20.7.2",
        "@typescript-eslint/eslint-plugin": "^6.7.3",
        "@typescript-eslint/parser": "^6.7.3",
        "eslint": "^8.50.0",
        "eslint-config-prettier": "^9.0.0",
        "eslint-import-resolver-typescript": "^3.6.1",
        "eslint-plugin-import": "^2.28.1",
        "eslint-plugin-prettier": "^5.0.0",
        "eslint-plugin-react": "^7.33.2",
        "eslint-plugin-react-hooks": "5.0.0-canary-7118f5dd7-20230705",
        "eslint-plugin-react-refresh": "^0.4.3",
        "eslint-plugin-unicorn": "^48.0.1",
        "eslint-plugin-workspaces": "^0.9.0",
        "lint-staged": "^14.0.1",
        "pre-commit": "^1.2.2",
        "prettier": "^3.0.3",
        "prettier-plugin-astro": "^0.12.0",
        "turbo": "^1.10.14",
        "typescript": "^5.2.2"
    },
    "pre-commit": "beforecommit"
