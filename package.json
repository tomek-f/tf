{
    "name": "tf",
    "private": true,
    "type": "module",
    "engines": {
        "node": "^18 || ^20"
    },
    "scripts": {
        "turbo:build": "turbo build",
        "turbo:check-types": "turbo check-types --force",
        "turbo:lint-js": "turbo lint-js --force",
        "turbo:lint-js-fix": "turbo lint-js-fix --force",
        "turbo:lint-js-next": "turbo lint-js-next --force",
        "turbo:test": "turbo test --force",
        "turbo:astro-check": "turbo astro-check --force --concurrency=1",
        "turbo:build-slash-run-pocs": "turbo build run --force --filter='./pocs/*' --filter=!@tf/astro-ssr --filter=!@tf/t3-playground",
        "format-check": "prettier --check . **/*.astro",
        "format-write": "prettier --write . **/*.astro",
        "beforecommit": "NODE_ENV=production lint-staged && npm run turbo:astro-check && turbo check-types test --force",
        "vercel": "vercel",
        "turbo": "turbo"
    },
    "workspaces": [
        "apps/*",
        "components/*",
        "libs/*",
        "pocs/*",
        "sites/*",
        "tools/*"
    ],
    "devDependencies": {
        "@ianvs/prettier-plugin-sort-imports": "^4.1.1",
        "@total-typescript/ts-reset": "^0.5.1",
        "@types/node": "^20.9.0",
        "@typescript-eslint/eslint-plugin": "^6.10.0",
        "@typescript-eslint/parser": "^6.10.0",
        "eslint": "^8.53.0",
        "eslint-config-prettier": "^9.0.0",
        "eslint-import-resolver-typescript": "^3.6.1",
        "eslint-plugin-import": "^2.29.0",
        "eslint-plugin-prettier": "^5.0.1",
        "eslint-plugin-react": "^7.33.2",
        "eslint-plugin-react-hooks": "5.0.0-canary-7118f5dd7-20230705",
        "eslint-plugin-react-refresh": "^0.4.4",
        "eslint-plugin-typescript-sort-keys": "^3.1.0",
        "eslint-plugin-unicorn": "^49.0.0",
        "eslint-plugin-workspaces": "^0.9.0",
        "lint-staged": "^15.0.2",
        "pre-commit": "^1.2.2",
        "prettier": "^3.0.3",
        "prettier-plugin-astro": "^0.12.1",
        "prettier-plugin-tailwindcss": "^0.5.7",
        "turbo": "^1.10.16",
        "typescript": "^5.2.2"
    },
    "pre-commit": "beforecommit"
}
