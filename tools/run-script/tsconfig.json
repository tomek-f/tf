{
  "compilerOptions": {
    "lib": ["es2023"],
    "module": "ES2022",
    "target": "es5",
    "noImplicitAny": false,
    "sourceMap": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "skipLibCheck": true,
    "moduleResolution": "node"
  },
  "include": ["./src"],
  "ts-node": {
    "compilerHost": true,
    "emit": true
  }
}
