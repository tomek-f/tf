{
    "compilerOptions": {
        "module": "nodenext",
        "target": "esnext",
        "noImplicitAny": false,
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "skipLibCheck": true,
        "moduleResolution": "nodenext",
        "outDir": "./out",
        "esModuleInterop": true,
        "noErrorTruncation": true,
        "verbatimModuleSyntax": true,
        "noEmit": true,
    },
    "include": ["./src"],
    "exclude": ["node_modules", "./out"],
}
