{
    "compilerOptions": {
        "module": "esnext",
        "target": "esnext",
        "noImplicitAny": false,
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "skipLibCheck": true,
        "moduleResolution": "bundler",
        "outDir": "./out",
        "esModuleInterop": true,
        "noErrorTruncation": true,
        "verbatimModuleSyntax": true,
        "noEmit": true
    },
    "include": ["./src"],
    "exclude": ["node_modules", "./out"]
}
