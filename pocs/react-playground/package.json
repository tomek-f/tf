{
    "name": "@tf/react-playground",
    "version": "0.0.0",
    "private": true,
    "type": "module",
    "engines": {
        "node": "^18 || ^20"
    },
    "scripts": {
        "dev": "vite",
        "dev-dev": "tsc -p tsconfig.dev.json && vite",
        "build-and-preview": "pnpm run build && pnpm run preview",
        "build": "tsc && vite build",
        "preview": "vite preview",
        "_ntl_hack_preview": "vite preview",
        "lint-js": "NODE_ENV=production eslint --ext .js,.jsx,.cjs,.mjs,.ts,.tsx ./",
        "lint-js-fix": "pnpm run lint-js --fix",
        "check-types": "tsc --skipLibCheck true -p ./tsconfig.json && echo 'no problems'",
        "test:watch": "vitest --reporter=verbose",
        "test:ui": "vitest --ui",
        "test": "vitest --reporter=verbose run"
    },
    "dependencies": {
        "@reduxjs/toolkit": "^2.2.1",
        "clsx": "^2.1.0",
        "history": "^5.3.0",
        "immer": "^10.0.4",
        "jotai": "^2.7.0",
        "react": "^18.2.0",
        "react-dom": "^18.2.0",
        "react-helmet-async": "^2.0.4",
        "react-intl": "^6.6.2",
        "react-redux": "^9.1.0",
        "react-router": "^6.22.3",
        "react-router-dom": "^6.22.3",
        "scheduler": "^0.23.0",
        "use-context-selector": "^1.4.4",
        "use-immer": "^0.9.0",
        "zustand": "^4.5.2"
    },
    "devDependencies": {
        "@tailwindcss/postcss": "4.0.0-alpha.8",
        "@tailwindcss/vite": "4.0.0-alpha.8",
        "@types/react": "^18.2.65",
        "@types/react-dom": "^18.2.21",
        "@vitejs/plugin-react-swc": "^3.6.0",
        "@vitest/ui": "^1.3.1",
        "autoprefixer": "^10.4.18",
        "eslint": "^8.57.0",
        "happy-dom": "^13.8.2",
        "rollup-plugin-visualizer": "^5.12.0",
        "tailwindcss": "4.0.0-alpha.8",
        "typescript": "^5.4.2",
        "vite": "^5.1.6",
        "vitest": "^1.3.1"
    },
    "postcss": {
        "plugins": {
            "@tailwindcss/postcss": {},
            "autoprefixer": {}
        }
    }
}
