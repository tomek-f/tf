{
    "name": "@tf/react-playground",
    "version": "0.0.0",
    "private": true,
    "type": "module",
    "engines": {
        "node": "^18 || ^20"
    },
    "scripts": {
        "dev": "vite",
        "dev-dev": "tsc -p tsconfig.dev.json && vite",
        "build-and-preview": "pnpm run build && pnpm run preview",
        "build": "tsc && vite build",
        "preview": "vite preview",
        "lint-js": "NODE_ENV=production eslint",
        "lint-js-fix": "pnpm run lint-js --fix",
        "check-types": "tsc --skipLibCheck true -p ./tsconfig.json && echo 'no problems'",
        "test:watch": "vitest --reporter=verbose",
        "test:ui": "vitest --ui",
        "test": "vitest --reporter=verbose run"
    },
    "dependencies": {
        "@reduxjs/toolkit": "^2.2.6",
        "clsx": "^2.1.1",
        "history": "^5.3.0",
        "immer": "^10.1.1",
        "jotai": "^2.9.0",
        "react": "^18.3.1",
        "react-dom": "^18.3.1",
        "react-helmet-async": "^2.0.5",
        "react-intl": "^6.6.8",
        "react-redux": "^9.1.2",
        "react-router": "^6.25.1",
        "react-router-dom": "^6.25.1",
        "scheduler": "^0.23.2",
        "use-context-selector": "^2.0.0",
        "use-immer": "^0.10.0",
        "zustand": "^4.5.4"
    },
    "devDependencies": {
        "@types/react": "^18.3.3",
        "@types/react-dom": "^18.3.0",
        "@vitejs/plugin-react-swc": "^3.7.0",
        "@vitest/ui": "^2.0.4",
        "autoprefixer": "^10.4.19",
        "eslint": "^9.7.0",
        "happy-dom": "^14.12.3",
        "postcss": "^8.4.39",
        "rollup-plugin-visualizer": "^5.12.0",
        "tailwindcss": "^3.4.6",
        "typescript": "^5.5.3",
        "vite": "^5.3.4",
        "vite-tsconfig-paths": "^4.3.2",
        "vitest": "^2.0.4"
    },
    "postcss": {
        "plugins": {
            "tailwindcss": {},
            "autoprefixer": {}
        }
    }
}
