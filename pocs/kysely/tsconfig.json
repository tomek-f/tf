{
    "extends": "../../tsconfig.json",
    "compilerOptions": {
        "noImplicitAny": false,
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "skipLibCheck": true,
        "moduleResolution": "bundler",
        "esModuleInterop": true,
        "noEmit": true,
        "noErrorTruncation": true,
        "verbatimModuleSyntax": true
    },
    "include": ["./src"],
    "exclude": ["node_modules"]
}
