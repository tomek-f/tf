{
    "compilerOptions": {
        "module": "es6",
        "target": "es5",
        "noImplicitAny": false,
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "skipLibCheck": true,
        "moduleResolution": "node",
        "esModuleInterop": true,
        "noEmit": true
    },
    "include": ["./src"],
    "exclude": ["node_modules"]
}
