{
    "extends": "../../tsconfig.json",
    "compilerOptions": {
        "skipLibCheck": true,
        "jsx": "preserve",
        "plugins": [{ "name": "next" }],
        "strictNullChecks": true,
        "baseUrl": ".",
        "paths": {
            "NEXT_PG/*": ["./src/*"]
        }
    },
    "include": [
        "../../@types",
        "next-env.d.ts",
        "src/env.d.ts",
        "**/*.ts",
        "**/*.tsx",
        ".next/types/**/*.ts"
    ],
    "exclude": ["node_modules"]
}
