---
import posts from '../../from-social/posts.json';
import CommonLayout from '../../layouts/CommonLayout.astro';
---

<CommonLayout title="From Social">
    {
        posts.map((post) => (
            <div>
                <a
                    href={
                        './from-social/' + // TODO ?
                        post.image.split('/').pop()?.split('.').shift()
                    }
                >
                    <h2>{post.title}</h2>
                </a>
                <p>{post.creation_date}</p>
            </div>
        ))
    }
</CommonLayout>
