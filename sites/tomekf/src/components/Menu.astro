---
import { linkPartialCss } from '../styles/common';

export interface Props {
  class?: string;
}

const { class: className } = Astro.props;
const { pathname } = Astro.url;
const isInfo = pathname.startsWith('/info');
const isContact = pathname.startsWith('/contact');
---

<div class={['flex gap-3', className].filter(Boolean).join(' ')}>
  <a
    class:list={[
      linkPartialCss,
      'md:text-2xl',
      {
        'text-blue-500': isInfo,
        'text-orange-500': !isInfo,
      },
    ]}
    href="/info">Info</a
  >
  <a
    class:list={[
      linkPartialCss,
      'md:text-2xl',
      {
        'text-blue-500': isContact,
        'text-orange-500': !isContact,
      },
    ]}
    href="/contact">Contact</a
  >
</div>
