---
import { linkActiveColorCss, linkDefaultColorCss, linkHoverColorCss } from '../styles/common';

export interface Props {
  class?: string;
}

const { class: className } = Astro.props;
const { pathname } = Astro.url;
const isInfo = pathname.startsWith('/info');
const isContact = pathname.startsWith('/contact');
---

<div class={['flex gap-3', className].filter(Boolean).join(' ')}>
  <a
    class:list={[
      'md:text-xl',
      {
        [linkActiveColorCss]: isInfo,
        [linkDefaultColorCss]: !isInfo,
        [linkHoverColorCss]: !isInfo,
      },
    ]}
    href="/info">Info</a
  >
  <a
    class:list={[
      'md:text-xl',
      {
        [linkActiveColorCss]: isContact,
        [linkDefaultColorCss]: !isContact,
        [linkHoverColorCss]: !isContact,
      },
    ]}
    href="/contact">Contact</a
  >
</div>
