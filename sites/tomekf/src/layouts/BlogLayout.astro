---
import type { MarkdownLayoutProps } from 'astro';

import Content from '../components/Content.astro';
import { linkCss } from '../styles/common';
import CommonLayout from './CommonLayout.astro';

type Props = MarkdownLayoutProps<{
  title: string;
  author: string;
  date: string;
}>;

const { frontmatter } = Astro.props;

// TODO wysiwyg inner css
---

<CommonLayout title={`${frontmatter.title} | Blog`}>
  <Content>
    <a class={linkCss} href="/blog">Back to blog</a>
    <Content class="wysiwyg mt-4">
      <span class="text-red-500">ALPHA</span>
      <h1>{frontmatter.title} by {frontmatter.author}</h1>
      <slot />
      <p>
        Written on:
        <time datetime={new Date(`${frontmatter.date} 12:00`).toISOString()}>
          {frontmatter.date}
        </time>
      </p>
    </Content>
  </Content>
</CommonLayout>
